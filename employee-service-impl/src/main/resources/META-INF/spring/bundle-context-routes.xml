<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:cxf="http://camel.apache.org/schema/cxf"	xsi:schemaLocation="http://www.springframework.org/schema/beans       http://www.springframework.org/schema/beans/spring-beans.xsd       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd	   http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">
    <cxf:cxfEndpoint name="employeeServiceCXF" address="/employeeservice" endpointName="cs:EmployeeServicePort"
        xmlns:cs="http://service.employee.com/v1" serviceName="cs:EmployeeService" wsdlURL="wsdl/employee-service.wsdl" />
        <camel:camelContext>
            <camel:dataFormats>
                <camel:jaxb id="employeeJaxb" contextPath="com.employee.service.types.v1"/>
            </camel:dataFormats>
            <camel:route id="employee-service-main-route">
                <camel:from uri="cxf:bean:employeeServiceCXF?dataFormat=PAYLOAD"/>
                <camel:unmarshal ref="employeeJaxb"/>
                <camel:process ref="employeeResponseProcessor"></camel:process>
            </camel:route>
        </camel:camelContext>
        <bean id="employeeResponseProcessor" class="com.employee.service.processor.EmployeeResponseProcessor"/>
</beans>